<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= post.description %>
  </p>

  <p>
    <strong>Published at:</strong>
    <%= post.published_at %>
  </p>

  <p><%= image_tag(post.image, style:"height: 400px;width:400px;") %></p>
  <video controls>
    <source src="<%= url_for(post.video) %>" type="video/mp4">
    fallback
  </video>
</div>
